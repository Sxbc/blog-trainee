<% if @post.images.any? %>

  <div class="hero-unit">
    <div class="hero-title">
      <%= @post.title %>
      <div class="hero-button btn-default">
        <%= link_to "Back to Posts", posts_path, method: :get %>
      </div>
    </div>

    <div class="hero-img">
      <%= image_tag @post.images.first.image_url %>
    </div>
  </div>
<%end%>

<div class="post-body">
  <%= @post.body %>
</div>

